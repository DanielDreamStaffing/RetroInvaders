<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/fi_hd"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/btnPlay"
            android:background="@drawable/play_dh"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_column="8"
            android:layout_marginRight="0dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="30dp"/>

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/btnScores"
            android:background="@drawable/scores_hd"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/btnPlay"
            android:layout_toLeftOf="@+id/btnPlay"
            android:layout_column="6"
            android:layout_marginTop="65dp"
            android:layout_gravity="left|center_vertical"/>

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btnCredits"
            android:background="@drawable/credits_hd"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/btnPlay"
            android:layout_marginBottom="15dp"
            android:layout_column="7"
            android:layout_gravity="right|bottom"
            />
    </FrameLayout>

</RelativeLayout>
